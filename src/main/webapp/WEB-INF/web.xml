<!DOCTYPE web-app PUBLIC
		"-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
		"http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>

	<distributable/>

	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>com.github.hoverruan.weiboclient4j.demo.LoginServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>CallbackServlet</servlet-name>
		<servlet-class>com.github.hoverruan.weiboclient4j.demo.CallbackServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>InfoApi</servlet-name>
		<servlet-class>com.github.hoverruan.weiboclient4j.demo.api.InfoApiServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>HomeTimelineApi</servlet-name>
		<servlet-class>com.github.hoverruan.weiboclient4j.demo.api.HomeTimelineApiServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>LogoutApiServlet</servlet-name>
		<servlet-class>com.github.hoverruan.weiboclient4j.demo.api.LogoutApiServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>CallbackServlet</servlet-name>
		<url-pattern>/callback</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>InfoApi</servlet-name>
		<url-pattern>/api/info</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>HomeTimelineApi</servlet-name>
		<url-pattern>/api/timeline/home</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>LogoutApiServlet</servlet-name>
		<url-pattern>/api/logout</url-pattern>
	</servlet-mapping>
</web-app>
